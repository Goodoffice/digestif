<div class="brand">HackerLeads</div>

<div class="content">
  <h1>Welcome back</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-field">
      <%= f.email_field :email, required: true, placeholder: "Email", autofocus: true %>
    </div>

    <div class="form-field">
      <%= f.password_field :password, required: true, placeholder: "Password", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-field form-field--inline">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Access jobs", class: 'btn primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
